<div class="bg-dark py-3">
  <h3 class="text-white text-center">Projects List </h3>
</div>

<div class="container mt-4">
  <div>
    <a
      href="/project/{{user_id}}/addproject"
      type="button"
      class="btn btn-dark"
    >Add More Project</a>
    <a href="/" type="button" class="btn btn-dark">Home</a>

  </div>
  <div class="card my-4">
    <div class="card-header bg-info">
      <h3 class="text-white">Users</h3>
    </div>
    <div class="card-body">
      <table class="table">
        <tr>
          <th>S.No</th>
          <th>Name</th>
          <th>Details</th>
          <th>Action</th>
        </tr>

        {{#each project}}
          <tr>
            <td>{{increment @index}}</td>
            <td>{{this.name}}</td>
            <td>{{this.body}}</td>
            <td>
              <div class="d-flex">
                <a
                  href="/project/editproject/{{this.id}}"
                  type="button"
                  class="btn btn-primary me-2"
                  style="height: 38px"
                >Edit</a>

                <form
                  action="/project/deleteproject/{{this.id}}"
                  method="POST"
                  onsubmit="return confirm('Are you sure you want to delete this project?')"
                >
                  <input type="hidden" name="user_id" value="{{../user_id}}">
                  <button type="submit" class="btn btn-danger">Delete</button>
                </form>
              </div>
            </td>
          </tr>
        {{/each}}
      </table>
    </div>
  </div>
</div>